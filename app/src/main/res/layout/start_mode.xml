<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191e24"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="414dp"
        android:layout_height="444dp"
        android:background="@drawable/timer_mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/non_timermode"
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:alpha="0.9"
            android:background="#c46263"
            android:fontFamily="@font/shojumaru"
            android:text="NON TIMER MODE"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.403" />

        <Button
            android:id="@+id/timermode"
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"
            android:alpha="0.9"
            android:background="#4274d3"
            android:fontFamily="@font/shojumaru"
            android:text="TIMER MODE"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/non_timermode"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.403" />

        <Button
            android:id="@+id/satrt_exit"
            android:layout_width="92dp"
            android:layout_height="66dp"
            android:background="@drawable/styling_modebutton"
            android:fontFamily="@font/shojumaru"
            android:text="BACK"
            android:textColor="#fc030f"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/non_timermode"
            app:layout_constraintVertical_bias="0.952" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>