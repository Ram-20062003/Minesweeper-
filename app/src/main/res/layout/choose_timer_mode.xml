<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frosted">

    <Button
        android:id="@+id/easy_timer"
        android:layout_width="228dp"
        android:layout_height="58dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/shojumaru"
        android:text="EASY"
        android:background="@drawable/styling_modebutton"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2_timer" />

    <TextView
        android:id="@+id/textView2_timer"
        android:layout_width="393dp"
        android:layout_height="68dp"
        android:layout_marginTop="148dp"
        android:fontFamily="@font/fontdiner_swanky"
        android:gravity="center"
        android:text="SELECT THE MODE"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/medium_timer"
        android:layout_width="228dp"
        android:layout_height="58dp"
        android:layout_marginTop="33dp"
        android:text="MEDIUM"
        android:textSize="30sp"
        android:background="@drawable/styling_modebutton"
        android:fontFamily="@font/shojumaru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/easy_timer" />

    <Button
        android:id="@+id/hard_timer"
        android:layout_width="228dp"
        android:layout_height="58dp"
        android:layout_marginTop="33dp"
        android:text="HARD"
        android:fontFamily="@font/shojumaru"
        android:background="@drawable/styling_modebutton"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medium_timer" />

    <Button
        android:id="@+id/expert_timer"
        android:layout_width="228dp"
        android:layout_height="58dp"
        android:layout_marginTop="33dp"
        android:text="EXPERT"
        android:background="@drawable/styling_modebutton"
        android:textSize="30sp"
        android:fontFamily="@font/shojumaru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hard_timer" />

    <Button
        android:id="@+id/leave_timer"
        android:layout_width="148dp"
        android:layout_height="57dp"
        android:background="@drawable/styling_modebutton"
        android:fontFamily="@font/shojumaru"
        android:text="BACK"
        android:textColor="#fc0317"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expert_timer"
        app:layout_constraintVertical_bias="0.261" />
</androidx.constraintlayout.widget.ConstraintLayout>